{
  "description": "IVR",
  "states": [
    {
      "name": "Trigger",
      "type": "trigger",
      "transitions": [
        {
          "event": "incomingMessage"
        },
        {
          "next": "gather_input",
          "event": "incomingCall"
        },
        {
          "event": "incomingRequest"
        }
      ],
      "properties": {
        "offset": {
          "x": 250,
          "y": 50
        }
      }
    },
    {
      "name": "gather_input",
      "type": "gather-input-on-call",
      "transitions": [
        {
          "next": "check_for_digit",
          "event": "keypress"
        },
        {
          "event": "speech"
        },
        {
          "next": "gather_input",
          "event": "timeout"
        }
      ],
      "properties": {
        "voice": "alice",
        "number_of_digits": 1,
        "speech_timeout": "auto",
        "offset": {
          "x": 290,
          "y": 310
        },
        "loop": 1,
        "finish_on_key": "",
        "say": "Hey there, what demo would you like to know more? Press 1 for the Studio demo.",
        "language": "en",
        "stop_gather": false,
        "gather_language": "en",
        "profanity_filter": "true",
        "timeout": 5
      }
    },
    {
      "name": "check_for_digit",
      "type": "split-based-on",
      "transitions": [
        {
          "next": "gather_input",
          "event": "noMatch"
        },
        {
          "next": "send_demo_link",
          "event": "match",
          "conditions": [
            {
              "friendly_name": "If value matches_any_of 1,2,3",
              "arguments": ["{{widgets.gather_input.Digits}}"],
              "type": "matches_any_of",
              "value": "1,2,3"
            }
          ]
        }
      ],
      "properties": {
        "input": "{{widgets.gather_input.Digits}}",
        "offset": {
          "x": 40,
          "y": 550
        }
      }
    },
    {
      "name": "send_demo_link",
      "type": "run-function",
      "transitions": [
        {
          "next": "say_play_1",
          "event": "success"
        },
        {
          "next": "gather_input",
          "event": "fail"
        }
      ],
      "properties": {
        "service_sid": "ZS44ad88fdf880762d2f4a0ec8d5faf266",
        "environment_sid": "ZEb4cd594ee1d3604e2734fbd264c226f7",
        "offset": {
          "x": 580,
          "y": 780
        },
        "function_sid": "ZH95864dc70efcab0f5c938e2756dd97c7",
        "parameters": [
          {
            "value": "{{trigger.call.To}}",
            "key": "From"
          },
          {
            "value": "{{trigger.call.From}}",
            "key": "To"
          },
          {
            "value": "{{widgets.gather_input.Digits}}",
            "key": "Digits"
          }
        ],
        "url": "https://flows-example-8244.twil.io/send-demo-link"
      }
    },
    {
      "name": "say_play_1",
      "type": "say-play",
      "transitions": [
        {
          "event": "audioComplete"
        }
      ],
      "properties": {
        "offset": {
          "x": 250,
          "y": 1100
        },
        "loop": 1,
        "say": "Please check your text messages for the link to the demo."
      }
    }
  ],
  "initial_state": "Trigger",
  "flags": {
    "allow_concurrent_calls": true
  }
}
